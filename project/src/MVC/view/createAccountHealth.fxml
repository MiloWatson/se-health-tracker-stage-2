<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #f5f5f5;" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="MVC.controller.CreateAccountHealthController">
